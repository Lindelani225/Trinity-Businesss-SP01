@model IEnumerable<BusinesssTrinitySP01.Models.Color>

@{
    ViewBag.Title = "Colors";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h3 class="text-center"><b>Decor Component COlors</b></h3>
        <br />
        <p>
            @Html.ActionLink("New Color", "Create")
        </p>
        <table class="table table-hover table-bordered">
            @*<tr class="table-active table-bordered">
                    <th colspan="4" class="text-center"><h5><b style="font-size:18px;">Requests for quotation</b></h5></th>
                </tr>*@
            <tr class="table">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
            {

                <tr>

                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.Name)
                            </div>
                        </div>
                    </td>

                    
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                <img src="/Colors/RetrieveImage/@item.BoxId" alt="Color Image" height=80 width=80 />
                            </div>
                        </div>
                    </td>
                    

                    <td class="text-center">
                        @Html.ActionLink("Update", "Edit", new { id = item.BoxId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.BoxId }) |
                        @Html.ActionLink("Remove", "Delete", new { id = item.BoxId })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
