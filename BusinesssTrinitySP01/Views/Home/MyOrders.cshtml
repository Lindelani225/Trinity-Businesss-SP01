@model IEnumerable<BusinesssTrinitySP01.Models.Order>


@{
    ViewBag.Title = "My Orders";
}
<style>
    .well {
        min-height: 20px;
        padding: 19px;
        margin-bottom: 20px;
        background-color: #f5f5f5;
        border: 1px solid #e3e3e3;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05)
    }

        .well blockquote {
            border-color: #ddd;
            border-color: rgba(0,0,0,.15)
        }

    .View:hover, .rate:hover {
        color: white;
    }

    .View {
        font-size: 16px;
        border-radius: 5px;
        background-color: #66b0ff;
        border: none;
        color: white;
        padding: 10px 15px;
        margin-right: 1vw;
        text-align: center;
        text-decoration: none;
    }

    .rate {
        font-size: 16px;
        border-radius: 5px;
        background-color: #5cb85c;
        border: none;
        color: white;
        padding: 10px 15px;
        margin-right: 1vw;
        text-align: center;
        text-decoration: none;
    }
</style>
<div class="jumbotron">
    <div class="container" style="margin-top:8vh;">
        <h4 class="text-center"><b>Order Request Record</b></h4>
        <br />
        <table class="table table-hover">
            <tr class="table-active">
                <th>
                    @Html.DisplayNameFor(model => model.OrderID)
                </th>
                <th>
                    <label>Date Created</label>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShippimgDetails.ReturnDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentMethod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentStatus)
                </th>
                <th>
                    <label>Process Status</label>
                </th>
                <th><b>Action</b></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderID)
                    </td>

                    <th>
                        @Html.DisplayFor(model => item.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayFor(model => item.ShippimgDetails.ReturnDate)
                    </th>

                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentMethod)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentStatus)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ProcessStatus)
                    </td>

                    <td>
                        @Html.ActionLink("View", "Details", "Orders", new { id = item.OrderID }, new { @class = "View" })
                        @Html.ActionLink("Rate", "Create", "Rates", new { id = item.OrderID }, new { @class = "rate" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>