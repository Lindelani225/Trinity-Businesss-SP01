@model BusinesssTrinitySP01.Models.Order
@{
    ViewBag.Title = "Payment Method";

}
<div class="jumbotron">
    <div class="container" style="margin-top:8vh;">
        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()

            <br />
            <div class="form-horizontal">
                <h4 class="h4">Select Payment Method</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.OrderID)
                <div class="form-group">
                    @Html.LabelFor(model => model.PaymentMethod, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.PaymentMethod, new List<SelectListItem>
                                   {
                                     new SelectListItem {Text = "Cash"},
                                     new SelectListItem {Text = "Credit Card"}
                                   }, "--Select--", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PaymentMethod, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Proceed" class="btn btn-success" />
                    </div>
                </div>

            </div>
        }
    </div>
</div>

