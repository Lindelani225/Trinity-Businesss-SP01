@model BusinesssTrinitySP01.Models.Quote
@{
    ViewBag.Title = "Payment Success";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="jumbotron">
    <div class="container" style="margin-top:2vh;">
        <h2><b>Payment Success</b></h2>

        <p class="text-success text-center">The payment of the repair service from @Html.DisplayFor(x => x.Supplier.SuppName) has been made.<br /> A notification has been sent to the supplier.</p>

        <br />
        <table class="table table-hover">
            <tr class="table-active">
                <th>
                    @Html.DisplayNameFor(model => model.RequestID)
                </th>
                <th>
                    Supplier
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Request.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Request.PaymentStatus)
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.RequestID)
                </td>

                <th>
                    @Html.DisplayFor(modelItem => modelItem.Supplier.SuppName)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Request.Type)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => modelItem.Request.PaymentStatus)
                </td>

            </tr>

        </table>
        <br />
        <div class="text-center">
            <a class="btn btn-primary" href="@Url.Action("Index", "Admin")">Go to Dashboard</a>
        </div>

    </div>
</div>
