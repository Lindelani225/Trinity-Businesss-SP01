@model IEnumerable<BusinesssTrinitySP01.Models.Request>

@{
    ViewBag.Title = "Requests";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h3 class="text-center"><b>Repair Requests</b></h3>
        <br />
        <p>
            @Html.ActionLink("Inspection Reports", "Index", "Damageds")
        </p>
        <p>
            @Html.ActionLink("New Request", "RequestRepair", "Admin")
        </p>

        <table class="table table-hover table-bordered">
            <tr class="table">
                <th>Date</th>
                <th>Code</th>
                <th>Type</th>
                <th>No. Items</th>
                <th>Status</th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(model => item.DateCreated, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(m => item.RequestID)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(x => item.Type)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(x => item.Quantity)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(x => item.Status)
                            </div>
                        </div>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-primary" data-modal="" href="@Url.Action("Index", "RepairItems", new { id = item.RequestID })" id="btnCreate"> View Items</a>
                        <a class="btn btn-secondary" data-modal="" href="@Url.Action("ViewQuotes", "Admin", new { id = item.RequestID })" id="btnCreate">@*<i class="fa fa-eye"></i>*@ View Quotes</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
