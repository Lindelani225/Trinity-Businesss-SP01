@model List<BusinesssTrinitySP01.Models.Damaged>

@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/DriverLayout.cshtml";
}
<style>
     .chk {
        width: 20px;
        height: 20px;
    }
</style>

<div class="jumbotron">
    <div class="container" style="margin-top:5vh;">
        <h2 class="text-center">Damaged Items</h2>
        <br />
        <div class="text-center text-danger">
            @ViewBag.SumError
        </div>

        <br />
        @using (Html.BeginForm("ItemDescription", "Admin", FormMethod.Post))
        {
            <table class="table table-hover">
                <tr class="table-active">
                    <th hidden="hidden">
                        <label><b>Equipment ID</b></label>
                    </th>
                    <th>
                        <label><b>Equipment Name</b></label>
                    </th>

                    <th>
                        <label><b>Select Quantity</b></label>
                    </th>
                    <th>
                        <label><b>Select Item(s)</b></label>
                    </th>
                </tr>

                @for (int i = 0; i < ViewBag.Count; i++)
                {
                    <tr>

                        
                        <td hidden="hidden">
                            @Html.HiddenFor(m => Model[i].EquipmentID)
                        </td>

                        <td>
                            @Html.EditorFor(modelItem => Model[i].Equipment.Name, new { htmlAttributes = new { @disabled = "disabled" } })
                        </td>
                        <td>
                            @Html.EditorFor(modelItem => Model[i].DamagedItems)
                        </td>
                        <td>
                            @Html.EditorFor(modelItem => Model[i].selected)
                        </td>
                    </tr>
                }


            </table>
            <div class="text-center" style="margin-top:4vh;">
                <input type="submit" value="Select" class="btn btn-primary" />
            </div>

        }
    </div>
</div>
