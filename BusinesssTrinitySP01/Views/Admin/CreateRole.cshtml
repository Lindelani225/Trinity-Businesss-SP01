
@{
    ViewBag.Title = "CreateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h3 class="text-center"><b>Add Role & User</b></h3>
        <br />
        @using (Html.BeginForm("CreateRole", "Admin", FormMethod.Post))
        {
            <div class="rows">
                <div class="col-md-4">
                    @Html.ActionLink("Dashboard", "Index", "Admin")<br />
                    @Html.ActionLink("Create Role", "CreateRole", "Admin")<br />

                    @Html.ActionLink("Add User", "CreateUserAndAssignRole", "Admin")<br />
                </div>
            </div>
            <tr class="col-md-4">
                <th>Role Name</th>
                <td>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-group"></i>
                        </div>
                        <input type="text" class="form-control" name="RoleName" />
                    </div>
                    <button type="submit" class="btn btn-primary">Add Role</button>
                </td>

            </tr>
        }
    </div>
</div>

