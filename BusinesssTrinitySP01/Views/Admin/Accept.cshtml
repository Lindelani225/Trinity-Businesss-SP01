@model BusinesssTrinitySP01.Models.Quote
<div class="modal-header">
    <h4 class="modal-title"> Accept Quote</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true"><i class="fa fa-times-circle"></i></span>
    </button>
</div>


@using (Html.BeginForm("Accept", "Admin", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal-body">
        <table class="table table-bordered">
            <tr>
                <th hidden="hidden">
                    Quote
                </th>
                <td hidden="hidden">
                    @Html.HiddenFor(model => model.QuoteID)
                </td>
                <th>
                    <label class="col-form-label">Shipment&nbsp;Date</label>
                </th>
                <td>
                    @Html.EditorFor(model => model.ShipmentDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ShipmentDate, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
    </div>

    <div class="modal-footer">

        <input type="submit" value="Accept" class="btn btn-secondary" />
        <button class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
}

@Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/Scripts/js/bootstrap.js")

