@model List<BusinesssTrinitySP01.Models.RepairItem>

@{
    ViewBag.Title = "Item(s) Description";
    Layout = "~/Views/Shared/DriverLayout.cshtml";
}

<div class="jumbotron">
    <div class="container" style="margin-top:5vh;">
        <h2 class="text-center">Item Damage Description</h2>
        <br />
        @using (Html.BeginForm("SaveItems", "Admin", FormMethod.Post))
        {
            <table class="table table-hover">
                <tr class="table-active">
                    <th hidden="hidden">
                        <label><b>Equipment ID</b></label>
                    </th>
                    <th>
                        <label><b>Equipment Name</b></label>
                    </th>
                    <th>
                        <label><b>Description</b></label>
                    </th>
                </tr>

                @for (int i = 0; i < ViewBag.Count; i++)
                {
                    <tr>
                        <td hidden="hidden">
                            @Html.HiddenFor(m => Model[i].EquipmentID)
                        </td>
                        <td>
                            @Html.EditorFor(modelItem => Model[i].EquipName, new { htmlAttributes = new { @disabled = "disabled" } })
                        </td>
                        <td>
                            @Html.TextAreaFor(modelItem => Model[i].Description)
                        </td>
                    </tr>
                }


            </table>
            <div class="text-center" style="margin-top:4vh;">
                <input type="submit" value="Save and Continue" class="btn btn-primary" />
            </div>

        }
    </div>
</div>
