@model IEnumerable<BusinesssTrinitySP01.Models.Order>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}

<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h3 class="text-center"><b>Client Orders</b></h3>
        <br />
        <p>
            @Html.ActionLink("View Assignments", "Index", "OrderAssignments")
        </p>
        <table class="table table-hover table-bordered">
            @*<tr class="table-active table-bordered">
                <th colspan="4" class="text-center"><h5><b style="font-size:18px;">Requests for quotation</b></h5></th>
            </tr>*@
            <tr class="table">
                <th>
                    @Html.DisplayNameFor(model => model.ClientProfile.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShippimgDetails.NameofEvent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentMethod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProcessStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConfirmationStatus)
                </th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
            {

                <tr>

                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(model => item.ClientProfile.FirstName)
                            </div>
                        </div>
                    </td>

                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(model => item.ShippimgDetails.NameofEvent)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(model => item.PaymentMethod)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(model => item.PaymentStatus)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.ProcessStatus)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.ConfirmationStatus)
                            </div>
                        </div>
                    </td>



                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.OrderID }) |
                        @Html.ActionLink("View", "Details", new { id = item.OrderID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.OrderID })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

