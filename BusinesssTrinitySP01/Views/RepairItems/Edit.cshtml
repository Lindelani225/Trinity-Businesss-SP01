@model BusinesssTrinitySP01.Models.RepairItem

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "RepairItems", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="jumbotron">
        <div class="container" style="margin-top:2vh;">
            <h2 class="text-center">Upload Picture of Damaged Item(s)</h2>
            <br />
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ItemID)
            <br />
            <table class="table table-hover">
                <tr class="table-active">
                    <th hidden="hidden">
                        @Html.LabelFor(model => model.EquipmentID, "EquipmentID", htmlAttributes: new { @class = "control-label col-md-2" })
                    </th>
                    <th>
                        @Html.LabelFor(model => model.Equipment.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    </th>
                    <th>
                        @Html.LabelFor(model => model.ItemCode, htmlAttributes: new { @class = "control-label col-md-2" })
                    </th>
                    <th>
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                    </th>

                    <th>
                        @Html.LabelFor(model => model.img, new { @class = "control-label col-md-2" })
                    </th>

                    <th>
                        @Html.LabelFor(model => model.img2, new { @class = "control-label col-md-2" })
                    </th>
                    <th>
                        @Html.HiddenFor(model => model.RequestID, htmlAttributes: new { @class = "control-label col-md-2" })
                    </th>
                </tr>

                <tr>
                    <td hidden="hidden">
                        @Html.DropDownList("EquipmentID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EquipmentID, "", new { @class = "text-danger" })
                    </td>

                    <td>
                        @Html.EditorFor(model => model.Equipment.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.ItemCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </td>

                    <td>
                        <input type="file" name="Img1" id="Img1" onchange="readURL(this);" class="form-control" required="required" />
                        @Html.ValidationMessageFor(model => model.img)
                    </td>

                    <td>
                        <input type="file" name="Bimg" id="Bimg" onchange="readURL(this);" class="form-control" required="required" />
                        @Html.ValidationMessageFor(model => model.img2)
                    </td>
                    <td>
                        @Html.HiddenFor(model => model.RequestID, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
            </table>
            <div class="form-group">
                <div class="text-center">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}





