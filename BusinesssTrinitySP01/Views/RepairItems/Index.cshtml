@model IEnumerable<BusinesssTrinitySP01.Models.RepairItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .upload:hover, .details:hover {
        color: white;
    }
    .upload {
        font-size: 14px;
        border-radius: 5px;
        background-color: #66b0ff;
        border: none;
        color: white;
        padding: 8px 17px 10px;
        margin-right: 1vw;
        text-align: center;
        text-decoration: none;
    }
    .details {
        font-size: 14px;
        border-radius: 5px;
        background-color: #5cb85c;
        border: none;
        color: white;
        padding: 8px 17px 10px;
        margin-right: 1vw;
        text-align: center;
        text-decoration: none;
    }
</style>

<div class="jumbotron">
    <div class="container" style="margin-top:5vh;">
        <h4 class="text-center"><u>Damaged Items</u></h4>
        <br />
        <table class="table table-hover">
            <tr class="table-active">
                <th>
                    @Html.DisplayNameFor(model => model.RequestID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-center"><b>Actions</b></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestID)
                    </td>

                    <th>
                        @Html.DisplayFor(modelItem => item.ItemCode)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>


                    <td class="text-center">
                        @Html.ActionLink("Upload Picture", "Edit", new { id = item.ItemID }, new { @class = "upload" })
                        @Html.ActionLink("Details", "Details", new { id = item.ItemID }, new { @class = "details" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>