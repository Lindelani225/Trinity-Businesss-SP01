@model IEnumerable<BusinesssTrinitySP01.Models.OrderAssignment>

@{
    ViewBag.Title = "Order Assignments";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h3 class="text-center"><b>Order Assignments</b></h3>
        <br />
        <p>
            @Html.ActionLink("Assign Employees", "Index", "Orders")
        </p>
       
        <table class="table table-hover table-bordered">
            @*<tr class="table-active table-bordered">
                    <th colspan="4" class="text-center"><h5><b style="font-size:18px;">Requests for quotation</b></h5></th>
                </tr>*@
            <tr class="table">
                <th>
                    @Html.DisplayNameFor(model => model.Order.OrderID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignedDriver)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignedGen)
                </th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
            {

        <tr>

            <td>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DisplayFor(modelItem => item.Order.OrderID)
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DisplayFor(modelItem => item.AssignedDriver)
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DisplayFor(modelItem => item.AssignedGen)
                    </div>
                </div>
            </td>


            <td class="text-center">
                @Html.ActionLink("Update", "Edit", new { id = item.OrderAssID }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderAssID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderAssID })
            </td>
        </tr>
            }
        </table>
    </div>
</div>

