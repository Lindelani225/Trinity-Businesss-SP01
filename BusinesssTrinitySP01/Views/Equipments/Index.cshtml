@model IEnumerable<BusinesssTrinitySP01.Models.Equipment>

@{
    ViewBag.Title = "Equipment Rentals";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h3 class="text-center"><b>Equipment Rentals</b></h3>
        <br />
        <p>
            @Html.ActionLink("New Equipment", "Create")
        </p>

       
        <p>
            @Html.ActionLink("Prepare Qoute Request", "RequestRepair", "Admin")
        </p>

        <table class="table table-hover table-bordered">
            @*<tr class="table-active table-bordered">
                <th colspan="4" class="text-center"><h5><b style="font-size:18px;">Requests for quotation</b></h5></th>
            </tr>*@
            <tr class="table">
                <th>
                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitCost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rentprice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
            {

                <tr>

                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.Category.CategoryName)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.Name)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(model => item.Description)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(model => item.UnitCost)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.Rentprice)

                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </div>
                        </div>
                    </td>

                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.EquipmentID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EquipmentID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EquipmentID })
                    </td>
                </tr>
            }
        </table>
        <p>
            @Html.ActionLink("Manage Categories", "Index", "Categories")
        </p>
    </div>
</div>

