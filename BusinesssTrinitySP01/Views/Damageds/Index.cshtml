@model IEnumerable<BusinesssTrinitySP01.Models.Damaged>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/DriverLayout.cshtml";
}

<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h3 class="text-center"><b>Inspection Reports</b></h3>
        <br />
        <p>
            @Html.ActionLink("Prepare Request", "RequestRepair", "Admin")
        </p>
        <table class="table table-hover table-bordered">
            
            <tr class="table">
                <th>
                    @Html.DisplayNameFor(model => model.Order.OrderID)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.Equipment.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MissingItems)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DamagedItems)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Refund)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OwingFee)
                </th>*@
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
            {

        <tr>
            <td>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DisplayFor(modelItem => item.Order.OrderID)
                    </div>
                </div>
            </td>
           
            <td>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DisplayFor(modelItem => item.Equipment.Name)
                    </div>
                </div>
            </td>

            <td>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DisplayFor(modelItem => item.MissingItems)
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DisplayFor(modelItem => item.DamagedItems)
                    </div>
                </div>
            </td>
            @*<td>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DisplayFor(modelItem => item.Refund)
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DisplayFor(modelItem => item.OwingFee)
                    </div>
                </div>
            </td>*@

            <td class="text-center">
                @Html.ActionLink("View Report", "Details", new { id = item.DamagedId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DamagedId })
            </td>
        </tr>
            }
        </table>
    </div>
</div>

