@model IEnumerable<BusinesssTrinitySP01.Models.Supplier>

@{
    ViewBag.Title = "Suppliers";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h3 class="text-center"><b>Suppliers</b></h3>
        <br />
        <p>
            @Html.ActionLink("New Supplier", "Create", "Suppliers")
        </p>
        <table class="table table-hover table-bordered">
            @*<tr class="table-active table-bordered">
                <th colspan="4" class="text-center"><h5><b style="font-size:18px;">Requests for quotation</b></h5></th>
            </tr>*@
            <tr class="table">
                <th>
                    @Html.DisplayNameFor(model => model.SuppName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SuppType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SuppTelephone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SuppEmail)
                </th>

                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
            {

                <tr>

                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.SuppName)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(model => item.SuppType)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.SuppTelephone)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(modelItem => item.SuppEmail)
                            </div>
                        </div>
                    </td>

                    <td class="text-center">
                        @Html.ActionLink("Update", "Edit", new { id = item.SuppID }) |
                        @Html.ActionLink("View", "Details", new { id = item.SuppID }) |
                        @Html.ActionLink("Remove", "Delete", new { id = item.SuppID })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
