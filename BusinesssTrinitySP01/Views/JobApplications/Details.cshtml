@model BusinesssTrinitySP01.Models.JobApplications

@{
    ViewBag.Title = "Applicant Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="jumbotron">
<div class="container" style="margin-top:4vh;">
    <h3 class="text-center"><b>Applicant Details</b></h3>
    <br />
    @*<h3>Are you sure you want to cancel this application?</h3>*@
<div>
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Applicant.RSAID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Applicant.RSAID)
        </dd>
    </dl>
    
    <br />
    <h4>Job Application</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Job.JobType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Job.JobType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AppliedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AppliedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Resume)
        </dt>

        <dd>
            @if (Model.Resume != null)
            {
                var base64 = Convert.ToBase64String(Model.Resume);
                var pdfsrc = "data:application/pdf;base64," + base64;
                <embed src="@pdfsrc" min-height="200" min-width="200" />
            }
        </dd>

    </dl>
    <p>
        @Html.ActionLink("Remove", "Delete", new { id = Model.JobAppID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>

</div>

</div>

</div>

