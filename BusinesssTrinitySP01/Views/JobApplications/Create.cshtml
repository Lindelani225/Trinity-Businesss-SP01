@model BusinesssTrinitySP01.Models.JobApplications

@{
    ViewBag.Title = "Vacancies";
}

<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h3 class="text-center"><b>Vacancies Available</b></h3>
        <br />
        <p>
            @Html.ActionLink("View My Applications", "ViewApplications","JobApplications")
        </p>
        <table class="table table-hover table-bordered">
            @*<tr class="table-active table-bordered">
                    <th colspan="4" class="text-center"><h5><b style="font-size:18px;">Requests for quotation</b></h5></th>
                </tr>*@
            <tr class="table">
                <th hidden="hidden">Job ID</th>
                <th>Job Code</th>
                <th>Job</th>
                <th>Post Date</th>
                <th>Closing Date</th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model.jobs)
            {

                <tr>
                    <td hidden="hidden">
                        @Html.HiddenFor(x => item.JobID)
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(model => item.JobCode, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(m => item.JobType)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(x => item.DateCreated)
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DisplayFor(x => item.ClosingDate)
                            </div>
                        </div>
                    </td>

                    <td class="text-center">
                        <a class="btn btn-primary" href="@Url.Action("Details", "Jobs", new { id = item.JobID })">Job Details</a>
                        <a class="btn btn-primary" data-modal="" href="@Url.Action("Apply", "JobApplications", new { id = item.JobID })" id="btnCreate">@*<i class="fa fa-eye"></i>*@ Apply</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/appjs/phones.js")
}


