@model BusinesssTrinitySP01.Models.Applicant
@{
    ViewBag.Title = "ViewApplications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h3 class="text-center"><b>Applicant's South African Identity Number</b></h3>
        <br />

        @using (Html.BeginForm())
        {
            <p class="text-danger text-center">@ViewBag.NotFound</p>
            <br />
            <div class="form-group">
                <label class="control-label col-md-2"><b>Enter Your ID No.</b></label>
                <div class="col-md-10">
                    <input type="text" name="RSAID" id="RSAID" class="form-control" />
                    @Html.ValidationMessageFor(model => model.RSAID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="text-center">
                    <input type="submit" value="Check Application" class="btn btn-primary" />
                </div>
            </div>
        }


    </div>
</div>

