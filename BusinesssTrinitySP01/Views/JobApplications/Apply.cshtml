@model BusinesssTrinitySP01.Models.JobApplications
<div class="modal-header">
    <h4 class="modal-title"> Apply</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true"><i class="fa fa-times-circle"></i></span>
    </button>
</div>


@using (Html.BeginForm("Apply", "JobApplications", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal-body">
        <div class="container">
            @Html.HiddenFor(model => model.JobID)
            @ViewBag.FileError
            <table class="">
                <tr>

                    <th>
                        RSA ID
                    </th>

                    <td>
                        <input type="text" name="ID" id="ID" class="form-control" required />
                    </td>

                </tr>
                <tr>
                    <th>
                        <label class="col-form-label">Upload&nbsp;Resume</label>
                    </th>
                    <td>
                        <input class="form-control" type="file" name="file" id="pdffile" required="required" />
                        @Html.ValidationMessageFor(model => model.Resume, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    @Html.ActionLink("New Applicant", "Create", "Applicants")
                </tr>
            </table>
        </div>

    </div>

    <div class="modal-footer">

        <input type="submit" value="Apply" class="btn btn-secondary" />
        <button class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
}

@Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/Scripts/js/bootstrap.js")

