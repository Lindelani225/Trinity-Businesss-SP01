@model BusinesssTrinitySP01.Models.Request
<div class="modal-header">
    <h4 class="modal-title">Return Date</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true"><i class="fa fa-times-circle"></i></span>
    </button>
</div>


@using (Html.BeginForm("ConfirmInvoice", "Supplier", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal-body">
        <table class="table table-bordered">
            <tr>
                <th hidden="hidden">
                    Request
                </th>
                <td hidden="hidden">
                    @Html.HiddenFor(model => model.RequestID)
                </td>
                <th>
                    <label class="col-form-label">Return&nbsp;Date</label>
                </th>
                <td>
                    @Html.EditorFor(model => model.ReturnDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ReturnDate, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
    </div>

    <div class="modal-footer">

        <input type="submit" value="Submit" class="btn btn-primary" />
        <button class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
}

@Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/Scripts/js/bootstrap.js")


