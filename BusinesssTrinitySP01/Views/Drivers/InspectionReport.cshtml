@model BusinesssTrinitySP01.Models.Order
@{
    ViewBag.Title = "Inspection Report";
    Layout = "~/Views/Shared/DriverLayout.cshtml";
}

<div class="container" style="margin-top:8vh;">
    <div class="jumbotron">
        <h2 class="text-center"><b>Inspection Report</b></h2>
        <br />
        <p class="text-center"><b>Trinity Rental Service</b></p><br />
        <div>
            <br />
            <table class="table table-hover table-bordered">
                <tr class="text-center table-active">
                    <th>
                        <label>Order No.</label>
                    </th>
                    <th>
                        <label>Collection Date</label>
                    </th>
                    <th>
                        <label>Total Items</label>
                    </th>
                </tr>
                <tr></tr>
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(x => x.OrderID)

                    </td>
                    <td>
                        @DateTime.Now.ToShortDateString()
                    </td>
                    <td>
                        @ViewBag.TotItems
                    </td>
                </tr>
                <tr><td colspan="3"><br /></td></tr>
                <tr class="text-center table-active">
                    <th colspan="3">
                        <b>Items Condition</b>
                    </th>
                </tr>
                <tr class="text-center">
                    <th>
                        <label>Good</label>
                    </th>
                    <th>
                        <label>Damaged</label>
                    </th>
                    <th>
                        <label>Missing</label>
                    </th>
                </tr>
                <tr class="text-center">
                    <td>
                        @ViewBag.Good
                    </td>
                    <td>
                        @ViewBag.Damaged
                    </td>
                    <td>
                        @ViewBag.Missing
                    </td>
                </tr>
                <tr class="table-active">
                    <th colspan="3"></th>
                </tr>
            </table>
            <br />
                  <table class="table table-bordered">
                      <tr>
                          <th class="table-active">
                              <label>
                                  <b>Refundable Deposit:</b>
                              </label>
                          </th>
                          <td>
                              <label>@ViewBag.RDeposit</label>
                          </td>
                          <th class="table-active">
                              <label>
                                  <b>Owing Fee:</b>
                              </label>
                          </th>
                          <td>
                              <label>@ViewBag.Owing</label>
                          </td>
                      </tr>
                  </table>
        </div>
        <br />
        <div class="col-md-12 text-center">
            @Html.ActionLink("Completed", "Dashboard", "Drivers", new { @class = "btn btn-success" })
        </div>
    </div>
</div>