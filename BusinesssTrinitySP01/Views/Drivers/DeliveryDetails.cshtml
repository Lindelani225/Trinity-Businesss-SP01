@model IEnumerable<BusinesssTrinitySP01.Models.OrderAssignment>


@{
    ViewBag.Title = "DeliveryDetails";
    Layout = "~/Views/Shared/DriverLayout.cshtml";
}
<style>
    .well {
        min-height: 20px;
        padding: 19px;
        margin-bottom: 20px;
        background-color: #f5f5f5;
        border: 1px solid #e3e3e3;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05)
    }

        .well blockquote {
            border-color: #ddd;
            border-color: rgba(0,0,0,.15)
        }

    .View:hover {
        color: white;
    }

    .View {
        font-size: 15px;
        border-radius: 8px;
        background-color: #66b0ff;
        border: none;
        color: white;
        padding: 7px 10px;
        margin-right: 1vw;
        text-align: center;
        text-decoration: none;
    }
</style>
<div class="jumbotron">
    <div class="container" style="margin-top:8vh;">
        <h2 class="text-center"><u>Assigned Orders</u></h2>
        <br />
        <table class="table table-hover">
            <tr class="table-active">
                <th>
                    @Html.DisplayNameFor(model => model.Order.OrderID)
                </th>
                <th>
                    <label>Deliver On</label>
                </th>
                <th>
                    <label>Delivery Address</label>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignedGen)
                </th>
                <th style="padding-left:30px"><b>Action</b></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order.OrderID)
                    </td>

                    <th>
                        @Html.DisplayFor(model => item.Order.ShippimgDetails.DeliveryDate)
                    </th>
                    <th>
                        @Html.DisplayFor(model => item.Order.ShippimgDetails.ClientAddress.Streetno)
                        @Html.DisplayFor(model => item.Order.ShippimgDetails.ClientAddress.Suburb)
                        @Html.DisplayFor(model => item.Order.ShippimgDetails.ClientAddress.City)
                        @Html.DisplayFor(model => item.Order.ShippimgDetails.ClientAddress.Province)
                        @Html.DisplayFor(model => item.Order.ShippimgDetails.ClientAddress.PostalCode)
                    </th>

                    <td>
                        @Html.DisplayFor(modelItem => item.AssignedGen)
                    </td>
                    <td>
                        @Html.ActionLink("View Order", "Details", "Orders", new { id = item.OrderID }, new { @class = "View" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>